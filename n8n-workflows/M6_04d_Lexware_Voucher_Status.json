    {
      "parameters": {
        "method": "GET",
        "url": "=https://api.lexware.io/v1/vouchers/{{ $('Parse Event Data').item.json.lexware_voucher_id }}",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "options": { "response": { "response": { "fullResponse": true } } }
      },
      "id": "e604d001-0005-4000-8000-000000000005",
      "name": "Fetch Voucher Detail",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1080, 180],
      "credentials": {
        "httpHeaderAuth": { "id": "LEXWARE_CREDENTIAL_ID", "name": "Lexware API" }
      },
      "onError": "continueErrorOutput"
    },
    {
      "parameters": {
        "jsCode": "const resp = $input.first().json;\nconst v = resp.body || resp;\nconst eventData = $('Parse Event Data').first().json;\n\nconst voucherStatus = (v.voucherStatus || '').toLowerCase();\nconst paidAmount = parseFloat(v.paidAmount || 0);\nconst openAmount = parseFloat(v.openAmount || 0);\nconst totalGross = parseFloat(v.totalGrossAmount || 0);\nconst dueDate = v.dueDate ? v.dueDate.substring(0, 10) : null;\n\n// Map Lexware status to BG sync_status\nlet syncStatus = 'synced';\nif (voucherStatus === 'paid' || voucherStatus === 'paidoff') syncStatus = 'paid';\nelse if (voucherStatus === 'overdue') syncStatus = 'overdue';\nelse if (voucherStatus === 'voided') syncStatus = 'voided';\n\nreturn {\n  json: {\n    lexware_voucher_id: eventData.lexware_voucher_id,\n    voucher_status: voucherStatus,\n    paid_amount: paidAmount,\n    open_amount: openAmount,\n    total_gross: totalGross,\n    due_date: dueDate,\n    sync_status: syncStatus\n  }\n};"
      },
      "id": "e604d001-0006-4000-8000-000000000006",
      "name": "Parse Voucher",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1300, 180]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE purchase_invoices SET\n  lexware_sync_status = '{{ $json.sync_status }}',\n  paid_amount = {{ $json.paid_amount }},\n  paid_at = CASE WHEN '{{ $json.sync_status }}' IN ('paid') AND paid_at IS NULL THEN now() ELSE paid_at END\nWHERE lexware_voucher_id = '{{ $json.lexware_voucher_id }}'\nRETURNING id, invoice_number, lexware_sync_status;",
        "options": {}
      },
      "id": "e604d001-0007-4000-8000-000000000007",
      "name": "Update Purchase Invoice",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [1520, 180],
      "credentials": {
        "postgres": { "id": "qXZ2ZjK31ZDrPoDG", "name": "Supabase Postgres" }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT complete_workflow_step('{{ $('Parse Event Data').item.json.step_key }}',\n  jsonb_build_object('voucher_status', '{{ $('Parse Voucher').item.json.voucher_status }}',\n    'paid_amount', {{ $('Parse Voucher').item.json.paid_amount }}));\n\nINSERT INTO lexware_sync_log (sync_direction, entity_type, entity_id, lexware_id, action, sync_status)\nVALUES ('pull', 'voucher',\n  {{ $json.id ? \"'\" + $json.id + \"'::uuid\" : \"NULL\" }},\n  '{{ $('Parse Event Data').item.json.lexware_voucher_id }}',\n  'status_update', 'success');\n\nDO $$ BEGIN\n  UPDATE events SET processed_at = now()\n  WHERE id = '{{ $('Parse Event Data').item.json.event_id }}'::uuid;\nEXCEPTION WHEN invalid_text_representation THEN NULL;\nEND $$;",
        "options": {}
      },
      "id": "e604d001-0008-4000-8000-000000000008",
      "name": "Complete + Log",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [1740, 180],
